{
    "name": "nemizar/personal-expenses-bot",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Nemizar\\PersonalExpensesBot\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Nemizar"
        }
    ],
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^8.2",
        "php-di/php-di": "^6.4",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "symfony/console": "^6.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "app": "php bin/app.php --ansi",
        "phpstan": "phpstan analyse -c ./phpstan.neon"
    }
}
